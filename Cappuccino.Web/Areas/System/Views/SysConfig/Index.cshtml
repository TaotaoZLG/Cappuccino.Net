
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<div class="layui-card">
    <div class="layui-card-body">
        <form class="layui-form" action="">
            <div class="layui-form-item">
                <div class="layui-form-item layui-inline">
                    <label class="layui-form-label">参数名称</label>
                    <div class="layui-input-inline">
                        <input type="text" name="ConfigName" placeholder="" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-inline">
                    <label class="layui-form-label">参数键名</label>
                    <div class="layui-input-inline">
                        <input type="text" name="ConfigKeys" placeholder="" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item layui-inline">
                    @Html.SearchBtnHtml()
                    @Html.ResetBtnHtml()
                </div>
            </div>
        </form>
    </div>
</div>
<div class="layui-card">
    <div class="layui-card-body">
        <table id="tableId" lay-filter="tableFilter"></table>
    </div>
</div>
@section Scripts {

    <!-- 头工具栏模板 -->
    <script type="text/html" id="toolbarTpl">
        @Html.TopToolBarHtml(ViewData["TopButtonList"])
    </script>

    <!-- 行工具栏模板 -->
    <script type="text/html" id="operationTpl">
        {{# if(d.configType === 1){ }}
            @Html.RightToolBarHtml(ViewData["RightButtonList"], "delete")
        {{# } else{ }}
            @Html.RightToolBarHtml(ViewData["RightButtonList"])
        {{# } }}
    </script>

    <!-- 启用|停用模板 -->
    <script type="text/html" id="enabledMarkTpl">
        {{#  if(d.enabledMark){ }}
        <input type="checkbox" name="enabledMark" value="{{d.id}}" lay-skin="switch" lay-text="启用|禁用" lay-filter="enabledMark" checked>
        {{#  } else{ }}
        <input type="checkbox" name="enabledMark" value="{{d.id}}" lay-skin="switch" lay-text="启用|禁用" lay-filter="enabledMark">
        {{#  } }}
    </script>

    <script>
        layui.use(['table', 'form', 'jquery', 'common'], function () {
            let table = layui.table;
            let form = layui.form;
            let $ = layui.jquery;
            let common = layui.common;

            let MODULE_PATH = "/System/SysConfig/";

            table.render({
                elem: '#tableId',
                url: MODULE_PATH + "GetList",
                page: true,
                cols: [
                    [
                        { type: 'checkbox' },
                        { field: 'id', title: 'ID', hide: true },
                        { field: 'configName', title: '参数名称' },
                        { field: 'configKeys', title: '参数键名' },
                        { field: 'configValue', title: '参数值', edit: 'text' },
                        {
                            field: 'configType', title: '参数类型', templet: function (d) {
                                return d.configType == 1 ? '系统内置' : '自定义';
                            }
                        },
                        { field: 'remark', title: '备注', width: 360 },
                        { title: '操作', toolbar: '#operationTpl', align: 'center', width: 195 }
                    ]
                ],
                skin: 'line',
                toolbar: '#toolbarTpl',
                defaultToolbar: [{
                    layEvent: 'refresh',
                    icon: 'layui-icon-refresh',
                }, 'filter', 'print', 'exports']
            });

            table.on('tool(tableFilter)', function (obj) {
                let data = obj.data;
                if (obj.event === 'delete') {
                    window.delete(data.id);
                } else if (obj.event === 'edit') {
                    window.edit(data.id);
                }
            });

            table.on('toolbar(tableFilter)', function (obj) {
                if (obj.event === 'create') {
                    window.create();
                } else if (obj.event === 'refresh') {
                    window.refresh();
                } else if (obj.event === 'batchDel') {
                    window.batchDel(obj);
                }
            });

            table.on('edit(tableFilter)', function (obj) {
                common.ajax("/System/SysConfig/UpdateConfigValue", "post", obj.data, true, true).done(function (response) {
                    layer.msg(response.msg, { icon: 1, time: 1000 }, function () {
                        table.reload("tableId");
                    });
                }).fail(function (error) {
                    console.log(error)
                });
                return false;
            });

            form.on('submit(search)', function (data) {
                table.reload('tableId', { where: data.field })
                return false;
            });

            form.on('switch(enabledMark)', function (obj) {
                layer.confirm('确定更改状态', { icon: 3, title: '提示' }, function (index) {
                    common.ajax(MODULE_PATH + "UpdateEnabledMark", "post", { id: parseInt(obj.value), enabledMark: obj.elem.checked * 1 }, true, true).done(function (response) {
                        layer.msg(response.msg, { icon: 1 });
                    }).fail(function (error) {
                        $(obj.elem).prop('checked', !obj.elem.checked);
                        form.render('checkbox');
                        console.log(error)
                    });
                }, function () {
                    $(obj.elem).prop('checked', !obj.elem.checked);
                    form.render('checkbox');
                })
            });

            window.create = function () {
                layer.open({
                    type: 2,
                    title: '新增',
                    shade: 0.1,
                    area: ['600px', '500px'],
                    content: MODULE_PATH + 'Create'
                });
            }

            window.edit = function (id) {
                layer.open({
                    type: 2,
                    title: '修改',
                    shade: 0.1,
                    area: ['600px', '500px'],
                    content: MODULE_PATH + 'Edit/' + id
                });
            }

            window.delete = function (id) {
                layer.confirm('确定要删除该任务计划吗？', { icon: 3, title: '提示' }, function (index) {
                    common.ajax(MODULE_PATH + "Delete", "post", { id: id }, true, true).done(function (response) {
                        layer.msg(response.msg, { icon: 1, time: 1000 }, function () {
                            table.reload('tableId');
                        });
                    }).fail(function (error) {
                        console.log(error)
                    });
                });
            }

            window.refresh = function () {
                table.reload('tableId');
            }
        })
    </script>

}
