
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
<form class="layui-form" lay-filter="formCreate">
    <div class="mainBox">
        <div class="main-container">
            <div class="main-container">
                <div class="layui-form-item">
                    <label class="layui-form-label">参数名称</label>
                    <div class="layui-input-block">
                        <input type="text" name="Name" lay-verify="required" placeholder="请输入参数名称" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">参数键名</label>
                    <div class="layui-input-block">
                        <input type="text" name="Keys" lay-verify="required" placeholder="请输入参数键名（英文标识）" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">参数值</label>
                    <div class="layui-input-block">
                        <input type="text" name="Value" lay-verify="required" placeholder="请输入参数值" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">参数类型</label>
                    <div class="layui-input-block">
                        <select name="Type" lay-verify="required">
                            <option value="2" @(Model?.Type == 2 ? "selected" : "")>自定义</option>
                            <option value="1" @(Model?.Type == 1 ? "selected" : "") disabled>系统内置（不可删除）</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">备注</label>
                    <div class="layui-input-block">
                        <textarea name="Remark" placeholder="请输入备注信息" class="layui-textarea" rows="3"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bottom">
        <div class="button-container">
            <button type="submit" class="layui-btn layui-btn-normal layui-btn-sm" lay-submit="" lay-filter="create">
                <i class="layui-icon layui-icon-ok"></i>
                提交
            </button>
            <button type="reset" class="layui-btn layui-btn-primary layui-btn-sm">
                <i class="layui-icon layui-icon-refresh"></i>
                重置
            </button>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        layui.use(['form', 'jquery', 'common', 'laydate'], function () {
            let form = layui.form;
            let $ = layui.jquery;
            let common = layui.common;
            var laydate = layui.laydate;

            // 日期时间选择器
            laydate.render({
                elem: '#startTime',
                type: 'datetime'
            });
            laydate.render({
                elem: '#endTime',
                type: 'datetime'
            });

            form.on("submit(create)", function (data) {
                common.ajax("/System/SysConfig/Create", "post", data.field, true, true).done(function (response) {
                    layer.msg(response.msg, { icon: 1, time: 1000 }, function () {
                        parent.layer.close(parent.layer.getFrameIndex(window.name));//关闭当前页
                        parent.layui.table.reload("tableId");
                    });
                }).fail(function (error) {
                    console.log(error)
                });
                return false;
            });
        });
    </script>
}
