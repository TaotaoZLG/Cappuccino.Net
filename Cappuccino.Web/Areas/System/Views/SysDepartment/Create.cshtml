@model  Cappuccino.Model.SysDepartmentModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

<form class="layui-form" lay-filter="formCreate">
    <div class="mainBox">
        <div class="main-container">
            <div class="main-container">
                <div class="layui-form-item">
                    <label class="layui-form-label">上级部门</label>
                    <div class="layui-input-block">
                        <ul id="parentIdSelect" class="dtree" data-id="0"></ul>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">部门名称</label>
                    <div class="layui-input-block">
                        <input type="text" name="name" lay-verify="required" autocomplete="off" placeholder="请输入部门名称" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">显示顺序</label>
                    <div class="layui-input-block">
                        <input type="text" name="sortCode" lay-verify="required" autocomplete="off" placeholder="请输入显示顺序" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">备注</label>
                    <div class="layui-input-block">
                        <input type="text" name="remark" autocomplete="off" placeholder="请输入备注" class="layui-input">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bottom">
        <div class="button-container">
            <button type="submit" class="layui-btn layui-btn-normal layui-btn-sm" lay-submit="" lay-filter="create">
                <i class="layui-icon layui-icon-ok"></i>
                提交
            </button>
            <button type="reset" class="layui-btn layui-btn-primary layui-btn-sm">
                <i class="layui-icon layui-icon-refresh"></i>
                重置
            </button>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        layui.use(['form', 'jquery', 'common', 'dtree', 'iconPicker'], function () {
            let form = layui.form;
            let $ = layui.jquery;
            let common = layui.common;
            let dtree = layui.dtree;
            let iconPicker = layui.iconPicker;

            iconPicker.render({
                elem: '#icon',
                type: 'fontClass',
                search: true,
                page: true,
                limit: 16,
                click: function (data) {
                    console.log(data);
                },
                success: function (d) {
                    console.log(d);
                }
            });

            dtree.render({
                elem: "#parentIdSelect",
                method: 'get',
                url: "/System/SysDepartment/GetDepartmentTree",
                select: true,
                line: true, // 有线树
                selectInputName: {
                    nodeId: "parentId",
                    context: "parentName"
                }
            });

            form.on("submit(create)", function (data) {
                common.ajax("/System/SysDepartment/Create", "post", data.field, true, true).done(function (response) {
                    layer.msg(response.msg, { icon: 1, time: 1000 }, function () {
                        parent.layer.close(parent.layer.getFrameIndex(window.name));//关闭当前页
                        parent.refresh();
                    });
                }).fail(function (error) {
                    console.log(error)
                });
                return false;
            });

            $(function () {
                common.ajax("/System/SysDepartment/GetMaxSortCode", "get").done(function (response) {
                    if (response.status === 0) {
                        form.val("formCreate", {
                            "sortCode": response.data
                        });
                    }
                }).fail(function (error) {
                    console.log(error)
                });
            });
        });
    </script>
}

