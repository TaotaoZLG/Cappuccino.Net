@model Cappuccino.Model.SysUserModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

@section style{
    <style type="text/css">
        .fr {
            float: right;
        }

        .img-headshot {
            width: 60px;
            height: 60px;
            position: absolute;
            top: -10px;
            border: medium none;
            border-radius: 50%;
            cursor: pointer;
        }
    </style>
}
<form class="layui-form" lay-filter="formEdit">
    @Html.HiddenFor(x => x.Id)
    <div class="mainBox">
        <div class="main-container">
            <div class="main-container">
                <div class="layui-form-item">
                    <label class="layui-form-label">账号</label>
                    <div class="layui-input-block">
                        <input type="text" name="userName" lay-verify="required" autocomplete="off" placeholder="请输入账号" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">昵称</label>
                    <div class="layui-input-block">
                        <input type="text" name="nickName" lay-verify="required" autocomplete="off" placeholder="请输入昵称" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">部门</label>
                    <div class="layui-input-block">
                        <ul id="organizationTree" class="dtree" data-id="0"></ul>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">头像</label>
                    <div class="layui-input-inline">
                        <input name="HeadIcon" readonly id="HeadShot" placeholder="图片地址" value="" class="layui-input">
                    </div>
                    <div class="layui-input-inline layui-btn-container" style="width: auto;">
                        <button type="button" class="layui-btn layui-btn-primary" id="btnUpload">
                            <i class="layui-icon">&#xe67c;</i>上传图片
                        </button>
                        <div id="layer-photos-demo" class="fr">
                            <img class="img-headshot" id="imgHeadShot" layer-pid="HeadShot" layer-src="~/Content/images/timg.jpg" src="@Model.HeadIcon" alt="头像预览">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">手机号码</label>
                    <div class="layui-input-block">
                        <input type="text" @*lay-verify="myPhone"*@ name="mobilePhone" autocomplete="off" placeholder="请输入号码" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">邮箱</label>
                    <div class="layui-input-block">
                        <input type="text" @*lay-verify="required|email"*@ name="email" autocomplete="off" placeholder="请输入邮箱" class="layui-input">
                    </div>
                </div>
                @Html.EnabledMarkRadioHtml("userStatus")
                <div class="layui-form-item">
                    <label class="layui-form-label">角色</label>
                    <div class="layui-input-block">
                        @Html.DropDownList("RoleIds", (IEnumerable<SelectListItem>)ViewBag.RoleSelectList, "请选择角色", new Dictionary<string, object> { { "xm-select", "RoleIds" }, { "xm-select-skin", "default" } })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bottom">
        <div class="button-container">
            <button type="submit" class="layui-btn layui-btn-normal layui-btn-sm" lay-submit="" lay-filter="edit">
                <i class="layui-icon layui-icon-ok"></i>
                提交
            </button>
            <button type="reset" class="layui-btn layui-btn-primary layui-btn-sm">
                <i class="layui-icon layui-icon-refresh"></i>
                重置
            </button>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        layui.use(['form', 'jquery', 'common', 'upload', 'select', 'dtree'], function () {
            let form = layui.form;
            let $ = layui.jquery;
            let common = layui.common;
            let upload = layui.upload;
            var select = layui.select;
            let dtree = layui.dtree;

            select.value('RoleIds', [@Model.RoleIds], true);

            var treeIns = dtree.render({
                elem: "#organizationTree",
                method: 'get',
                initLevel: "3", //默认展开层级为1
                selectTips: "请选择部门",
                line: true, // 有线树
                icon: ["0", "-1"], // 显示非最后一级节点图标，隐藏最后一级节点图标
                ficon: ["1", "7"],
                checkbarType: "self", // 默认就是all，其他的值为： no-all  p-casc   self  only
                url: "/System/SysDepartment/GetDepartmentTree",
                select: true,
                selectInputName: {
                    nodeId: "departmentId",
                    context: "departmentName"
                },
                done: function (res, $ul, first) {
                    treeIns.selectVal("@Model.DepartmentId");
                    treeIns.dataInit("@Model.DepartmentId");
                }
            });

            form.val("formEdit", {
                "userName": "@Model.UserName"
                ,"organizationTree": "@Model.DepartmentId"
                ,"nickName": "@Model.NickName"
                ,"HeadIcon": "@Model.HeadIcon"
                ,"mobilePhone": "@Model.MobilePhone"
                ,"email": "@Model.Email"
                ,"userStatus": "@Model.UserStatus"
            });

            upload.render({
                elem: '#btnUpload',
                url: '/Home/ExportFile',
                size: '@ViewBag.UploadFileSize',
                exts: '@ViewBag.UploadFileType',
                done: function (response) {
                    if (response.status == 0) {
                        $("#HeadShot").val(response.src);
                        $("#imgHeadShot").attr("src", response.src);
                        $("#imgHeadShot").attr("layer-src", response.src)
                    }
                }
            });

            form.verify({
                myPhone: [/(^$)|^1\d{10}$/, '请输入正确的手机号'],
            });

            form.on("submit(edit)", function (data) {
                data.field.departmentId = cap.filterNullField(data.field.departmentId);
                common.ajax("/System/SysUser/Edit", "post", data.field, true, true).done(function (response) {
                    layer.msg(response.msg, { icon: 1, time: 1000 }, function () {
                        parent.layer.close(parent.layer.getFrameIndex(window.name));//关闭当前页
                        parent.layui.table.reload("tableId");
                    });
                }).fail(function (error) {
                    console.log(error)
                });
                return false;
            });

            $("body").on("click", "#layer-photos-demo img", function (e) {
                var imgsrc = e.target.src || e.target.getAttribute("layer-src");
                layer.photos({
                    photos: { data: [{ "src": imgsrc }] },
                    closeBtn: 2,
                    anim: 1
                });

            });
        });
    </script>
}

