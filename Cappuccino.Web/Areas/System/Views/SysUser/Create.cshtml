
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

@section style{
    <style type="text/css">
        .fr {
            float: right;
        }

        .img-headshot {
            width: 60px;
            height: 60px;
            position: absolute;
            top: -10px;
            border: medium none;
            border-radius: 50%;
            cursor: pointer;
        }
    </style>
}
<form class="layui-form" lay-filter="formCreate">
    <div class="mainBox">
        <div class="main-container">
            <div class="main-container">
                <div class="layui-form-item">
                    <label class="layui-form-label">账号</label>
                    <div class="layui-input-block">
                        <input type="text" name="userName" lay-verify="required" autocomplete="off" placeholder="请输入账号" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">昵称</label>
                    <div class="layui-input-block">
                        <input type="text" name="nickName" lay-verify="required" autocomplete="off" placeholder="请输入昵称" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">部门</label>
                    <div class="layui-input-block">
                        <ul name="organizationTree" id="organizationTree"  class="dtree" data-id="0"></ul>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">头像</label>
                    <div class="layui-input-inline">
                        <input name="HeadIcon" readonly id="HeadShot" placeholder="图片地址" value="~/Content/images/timg.jpg" class="layui-input">
                    </div>
                    <div class="layui-input-inline layui-btn-container" style="width: auto;">
                        <button type="button" class="layui-btn layui-btn-primary" id="btnUpload">
                            <i class="layui-icon">&#xe67c;</i>上传图片
                        </button>
                        <div id="layer-photos-demo" class="fr">
                            <img class="img-headshot" id="imgHeadShot" layer-pid="HeadShot" layer-src="~/Content/images/timg.jpg" src="~/Content/images/timg.jpg" alt="头像预览">
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">手机号码</label>
                    <div class="layui-input-block">
                        <input type="text" lay-verify="myPhone" name="mobilePhone" autocomplete="off" placeholder="请输入号码" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">邮箱</label>
                    <div class="layui-input-block">
                        <input type="text" lay-verify="required|email" name="email" autocomplete="off" placeholder="请输入邮箱" class="layui-input">
                    </div>
                </div>
                @Html.EnabledMarkRadioHtml()
                <div class="layui-form-item">
                    <label class="layui-form-label">角色</label>
                    <div class="layui-input-block">
                        @Html.DropDownList("RoleIds", (IEnumerable<SelectListItem>)ViewBag.RoleSelectList, "请选择角色", new Dictionary<string, object> { { "xm-select", "RoleIds" }, { "xm-select-skin", "default" } })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bottom">
        <div class="button-container">
            <button type="submit" class="layui-btn layui-btn-normal layui-btn-sm" lay-submit="" lay-filter="create">
                <i class="layui-icon layui-icon-ok"></i>
                提交
            </button>
            <button type="reset" class="layui-btn layui-btn-primary layui-btn-sm">
                <i class="layui-icon layui-icon-refresh"></i>
                重置
            </button>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        layui.use(['form', 'jquery', 'common', 'upload', 'select', 'dtree'], function () {
            let form = layui.form;
            let $ = layui.jquery;
            let common = layui.common;
            let upload = layui.upload;
            let dtree = layui.dtree;

            dtree.render({
                elem: "#organizationTree",
                method: 'get',
                initLevel: "2", //默认展开层级为1
                line: true, // 有线树
                ficon: ["1", "-1"], // 设定一级图标样式。0表示方形加减图标，8表示小圆点图标
                icon: ["0", "2"], // 设定二级图标样式。0表示文件夹图标，5表示叶子图标
                url: "/System/SysDepartment/GetDepartmentTree",
                select: true,
                selectInputName: {
                    nodeId: "parentId",
                    context: "parentName"
                },
            });

            upload.render({
                elem: '#btnUpload',
                url: '/Home/ExportFile',
                size: '@ViewBag.UploadFileSize',
                exts: '@ViewBag.UploadFileType',
                done: function (response) {
                    if (response.status == 0) {
                        $("#HeadShot").val(response.src);
                        $("#imgHeadShot").attr("src", response.src);
                        $("#imgHeadShot").attr("layer-src", response.src)
                    }
                }
            });
            layer.photos({
                photos: '#layer-photos-demo',
                anim: 1
            });

            form.verify({
                myPhone: [/(^$)|^1\d{10}$/, '请输入正确的手机号'],
            });

            form.on("submit(create)", function (data) {
                common.ajax("/System/SysUser/Create", "post", data.field, true, true).done(function (response) {
                    layer.msg(response.msg, { icon: 1, time: 1000 }, function () {
                        parent.layer.close(parent.layer.getFrameIndex(window.name));//关闭当前页
                        parent.layui.table.reload("tableId");
                    });
                }).fail(function (error) {
                    console.log(error)
                });
                return false;
            });
        });
    </script>
}
