@model Cappuccino.ViewModel.SysActionViewModel
@using Cappuccino.Common.Enum

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

<form class="layui-form" lay-filter="formEdit">
    @Html.HiddenFor(x => x.Id)
    <div class="mainBox">
        <div class="main-container">
            <div class="main-container">
                <div class="layui-form-item">
                    <label class="layui-form-label">权限类型</label>
                    <div class="layui-input-block">
                        @Html.DropDownList("type", EnumHelper.GetSelectList(typeof(ActionTypeEnum)), new Dictionary<string, object> { { "disabled", "disabled" } })
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">上级菜单</label>
                    <div class="layui-input-block">
                        <ul id="parentIdSelect" class="dtree" data-id="0" data-value="@Model.ParentId"></ul>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">按钮名称</label>
                    <div class="layui-input-block">
                        <input type="text" name="name" lay-verify="required" autocomplete="off" placeholder="请输入菜单名称" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">权限标识</label>
                    <div class="layui-input-block">
                        <input type="text" name="code" lay-verify="required" autocomplete="off" placeholder="请输入权限标识" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">排序码</label>
                    <div class="layui-input-block">
                        <input type="text" name="sortCode" placeholder="排序码" autocomplete="off" class="layui-input" lay-verify="number" maxlength="2">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">按钮编码</label>
                    <div class="layui-input-block">
                        <input type="text" name="buttonCode" placeholder="按钮编码" autocomplete="off" class="layui-input" lay-verify="required">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">按钮样式</label>
                    <div class="layui-input-block">
                        <input type="text" name="buttonClass" lay-verify="required" autocomplete="off" placeholder="请输入样式" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">按钮图标</label>
                    <div class="layui-input-block">
                        <input type="text" id="buttonIcon" name="buttonIcon" value="layui-icon-face-smile" lay-filter="buttonIcon" style="display: none;">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">按钮位置</label>
                    <div class="layui-input-block">
                        @Html.DropDownList("location", EnumHelper.GetSelectList(typeof(PositionEnum)))
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bottom">
        <div class="button-container">
            <button type="submit" class="layui-btn layui-btn-normal layui-btn-sm" lay-submit="" lay-filter="edit">
                <i class="layui-icon layui-icon-ok"></i>
                提交
            </button>
            <button type="reset" class="layui-btn layui-btn-primary layui-btn-sm">
                <i class="layui-icon layui-icon-refresh"></i>
                重置
            </button>
        </div>
    </div>
</form>
@section Scripts {
    <script>
        layui.use(['form', 'jquery', 'common', 'dtree', 'iconPicker'], function () {
            let form = layui.form;
            let $ = layui.jquery;
            let common = layui.common;
            let dtree = layui.dtree;
            let iconPicker = layui.iconPicker;

            form.val("formEdit", {
                "Type": "@Model.Type",
                "name": "@Model.Name",
                "code": "@Model.Code",
                "sortCode": "@Model.SortCode",
                "buttonCode": "@Model.SysActionButton.ButtonCode",
                "buttonClass": "@Model.SysActionButton.ButtonClass",
                "location": "@Model.SysActionButton.Location",
            });

            iconPicker.render({
                elem: '#buttonIcon',
                type: 'fontClass',
                search: true,
                page: true,
                limit: 16,
                click: function (data) {
                    console.log(data);
                },
                success: function (d) {
                    console.log(d);
                }
            });

           iconPicker.checkIcon('buttonIcon', '@Model.SysActionButton.ButtonIcon');

           dtree.render({
                elem: "#parentIdSelect",
                method: 'get',
                url: "/System/SysAction/GetMenuTree",
                select: true,
                selectInputName: {
                    nodeId: "parentId",
                    context: "parentName"
                }
            });

            form.on("submit(edit)", function (data) {
                common.ajax("/System/SysAction/Edit", "post", data.field, true, true).done(function (response) {
                    layer.msg(response.msg, { icon: 1, time: 1000 }, function () {
                        parent.layer.close(parent.layer.getFrameIndex(window.name));//关闭当前页
                        parent.refresh();
                    });
                }).fail(function (error) {
                    console.log(error)
                });
                return false;
            });
        });
    </script>
}



